{% extends "views/layouts/base.njk" %}

{% block body %}
  <h2 class="is-size-2 has-text-centered mb-1"> Do you want to delete the user #{{id}}?</h2>

  <form class="has-text-centered" method="POST" action={{"/user/delete/" + id}}>
    <a class="button is-rounded is-dark is-outlined" href='/user'>No, go back</a>
    <button type="submit" class="button is-rounded is-danger is-outlined">Yes, delete</button>
  </form>
{% endblock %}